# ===========================================
# NextBeat Backend Configuration
# ===========================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# Server
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# Claude API - REQUIRED
# Get your key at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Claude model settings
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_TEMPERATURE=0.7

# Magenta model paths (relative to api/ directory)
DRUMS_RNN_CHECKPOINT=models/drum_kit_rnn.mag
MUSIC_TRANSFORMER_CHECKPOINT=models/music_transformer

# Generation defaults
DEFAULT_TEMPO=120
DEFAULT_BARS=8
DEFAULT_PRIMER_BARS=2
DEFAULT_TEMPERATURE=0.9

# Post-processing tuning
QUANTIZE_GRID=0.25
SWING_RATIO=0.66
HUMANIZE_TIMING=0.015
HUMANIZE_VELOCITY=8

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*
